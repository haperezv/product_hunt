<!DOCTYPE html>
<html>
  <head>
    <title>ProductHuntV1</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'tailwind.min.css'%>
    <%= javascript_importmap_tags %>
  </head>

  <body >
    <%= render partial:'partials/messages' %>
    <%= render partial:'partials/navbar' %>
      <div class="container px-4 mx-auto">
          <%= yield %>
      </div>
  </body>
  <script>
        var buttons = document.querySelectorAll('.message-close');
        buttons.forEach(function(button) {
          button.addEventListener('click', function() {
                var message = document.getElementById('message-' + button.value);
                message.style.display = 'none';
          });
        });

  </script>
</html>
